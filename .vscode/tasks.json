{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Собрать и запустить",
      "type": "shell",
      "command": "gfortran",
      "args": [
        "-g", "-Wall", "-Wextra", "-O0",
        "-o", "${fileDirname}/${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$fortran-gfortran"],
      "detail": "Компиляция текущего файла"
    }
  ]
}